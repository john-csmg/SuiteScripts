{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "no-extra-boolean-cast": "off",
        "prefer-const": "error",
        "prefer-template": "warn",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    }
}
